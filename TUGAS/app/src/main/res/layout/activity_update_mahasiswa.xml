<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSeaGreen"
    tools:context=".UpdateMahasiswa">

    <EditText
        android:id="@+id/editTextUploadNoMhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="No Mhs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002" />

    <EditText
        android:id="@+id/editTextUploadNamaMhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nama Mahasiswa"
        app:layout_constraintStart_toStartOf="@+id/editTextUploadNoMhs"
        app:layout_constraintTop_toBottomOf="@+id/editTextUploadNoMhs" />

    <EditText
        android:id="@+id/editTextUploadPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone"
        app:layout_constraintStart_toStartOf="@+id/editTextUploadNamaMhs"
        app:layout_constraintTop_toBottomOf="@+id/editTextUploadNamaMhs" />

    <Button
        android:id="@+id/buttonUploadMhs"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:text="UPDATE"
        android:background="@color/hijau"
        android:textColor="@color/putih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUploadPhone" />
</androidx.constraintlayout.widget.ConstraintLayout>